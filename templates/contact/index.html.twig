{% extends 'base.html.twig' %}

{% block title %}Contact - Zoo Arcadia{% endblock %}

{% block body %}
    <!-- Formulaire de contact -->
    <div style="padding: 40px; background-color: white; text-align: center;">
        <h1 style="font-family: 'Belanosima', sans-serif; font-size: 36px; color: #333;">Nous contacter</h1>
        {% for message in app.flashes('success') %}
            <p style="color: #73946B; font-family: 'Belanosima', sans-serif; font-size: 16px;">{{ message }}</p>
        {% endfor %}
        <form action="{{ path('app_contact') }}" method="post" style="max-width: 500px; margin: 0 auto;">
           <div style="margin-bottom: 20px;">
    <label for="email" style="font-family: 'Belanosima', sans-serif; font-size: 16px; color: #333;">Email :</label>
    <input type="email" id="email" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Entrez un email valide (ex. : nom@domaine.com)" style="width: 100%; padding: 10px; font-family: 'Belanosima', sans-serif; font-size: 14px; border: 1px solid #ccc; border-radius: 5px;">
</div>
<div style="margin-bottom: 20px;">
    <label for="title" style="font-family: 'Belanosima', sans-serif; font-size: 16px; color: #333;">Titre :</label>
    <input type="text" id="title" name="title" required pattern=".{3,100}" title="Le titre doit contenir entre 3 et 100 caractères" style="width: 100%; padding: 10px; font-family: 'Belanosima', sans-serif; font-size: 14px; border: 1px solid #ccc; border-radius: 5px;">
</div>
<div style="margin-bottom: 20px;">
    <label for="description" style="font-family: 'Belanosima', sans-serif; font-size: 16px; color: #333;">Message :</label>
    <textarea id="description" name="description" required pattern=".{10,500}" title="Le message doit contenir entre 10 et 500 caractères" style="width: 100%; height: 150px; padding: 10px; font-family: 'Belanosima', sans-serif; font-size: 14px; border: 1px solid #ccc; border-radius: 5px;"></textarea>
</div>
            <button type="submit" style="background-color: #73946B; color: white; padding: 10px 20px; border: none; font-family: 'Belanosima', sans-serif; font-size: 16px; border-radius: 5px; cursor: pointer;">Envoyer</button>
        </form>
    </div>
{% endblock %}