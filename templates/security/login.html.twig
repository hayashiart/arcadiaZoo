{% extends 'base.html.twig' %}

{% block title %}Connexion - Zoo Arcadia{% endblock %}

{% block body %}
    <!-- Formulaire de connexion -->
    <div style="padding: 40px; background-color: white; text-align: center;">
        <h1 style="font-family: 'Belanosima', sans-serif; font-size: 36px; color: #333;">Connexion</h1>
        {% if error %}
            <p style="color: red; font-family: 'Belanosima', sans-serif; font-size: 16px;">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        {% endif %}
        <!-- Changement : ajout du jeton CSRF -->
<form action="{{ path('app_login') }}" method="post" style="max-width: 400px; margin: 0 auto;">
    {% if error %}
        <p style="color: red; font-family: 'Belanosima', sans-serif; font-size: 16px;">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}
    <div style="margin-bottom: 20px;">
        <label for="username" style="font-family: 'Belanosima', sans-serif; font-size: 16px; color: #333;">Email :</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}" required style="width: 100%; padding: 10px; font-family: 'Belanosima', sans-serif; font-size: 14px; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div style="margin-bottom: 20px;">
        <label for="password" style="font-family: 'Belanosima', sans-serif; font-size: 16px; color: #333;">Mot de passe :</label>
        <input type="password" id="password" name="_password" required style="width: 100%; padding: 10px; font-family: 'Belanosima', sans-serif; font-size: 14px; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" style="background-color: #73946B; color: white; padding: 10px 20px; border: none; font-family: 'Belanosima', sans-serif; font-size: 16px; border-radius: 5px; cursor: pointer;">Se connecter</button>
</form>
    </div>
{% endblock %}